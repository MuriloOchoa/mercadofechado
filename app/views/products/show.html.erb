<div class="col-md-3">

  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <% @product.images.each do |image| %>
    <%= image_tag (image.thumb.url) unless image.file.nil? %>
    <hr>
  <% end %>

  <%= link_to 'Editar', edit_product_path(@product), :class => "btn btn-warning" %>
  <%= link_to 'Voltar', products_path, :class => "btn btn-info" %>
</div>